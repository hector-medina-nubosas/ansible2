
data_dir  = "/var/lib/nomad"

bind_addr = "{{ ansible_eth1.ipv4.address }}" # the default

addresses {
  http  = "127.0.0.1 {{ ansible_eth1.ipv4.address }}"
}

server {
  enabled          = true
  # Para servers follower esto deber√≠a eliminarse.
  bootstrap_expect = 1

{% if server_join is defined %}
  server_join {
    retry_join = [{% for ip in server_join.value %}"{{ ip }}"{% if not loop.last %}, {% endif %}{% endfor %}]
  }
{% endif %}
}
